<article class="article-card">
  <div class="article-card__content">
    <h3 class="article-card__title">
      <a href="{{ article.url }}">
        {{- article.data.title -}}
      </a>
    </h3>
    <time class="minor" datetime="{{ article.data.date | isoDate }}">
      {{- article.data.date | udmDate -}}
    </time>
  </div>
  <img class="article-card__image"
    src="{{ article.url }}{{ article.data.cover.url }}"
    alt="{{ article.data.cover.alt }}"
    >
</article>