{% set menu = [
  {
    title: 'Блог',
    icon: 'feather',
    url: '/articles'
  },
  {
    title: 'Кыллюкам',
    icon: 'book'
  }
] %}
<ul>
  {% for link in menu %}
    <li>
      <a class="menu__link"
        {% if link.url %} href="{{ link.url }}" {% endif %}
        {% if link.url == page.url %} aria-current="page" {% endif %}
        >
        <i data-feather="{{ link.icon }}" aria-hidden="true"></i>
        <span>{{ link.title }}</span>
      </a>
    </li>
  {% endfor %}
</ul>